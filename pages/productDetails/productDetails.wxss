Page {
  padding-bottom: 100rpx;
}
.detail-container {
  background: #f5f5f5;
}

.top-info {
  width: 100%;
  /* height: 200rpx; *//* background-color: #d3d4d5; */
  padding: 20rpx;
  box-sizing: border-box;
  background: #fff;
}

.user-info {
  display: flex;
}

.user-nicheng {
  margin-left: 20rpx;
}

.user-icon {
  width: 80rpx;
  height: 80rpx;
  border-radius: 50%;
}

.user-icon image {
  width: 100%;
  height: 100%;
  border-radius: 50%;
  background-color: #f7f8fd;
}

.detail-title {
  margin-top: 20rpx;
}

.price {
}

.product-detail {
  padding: 20rpx;
  background-color: #fff;
}

.product-detail-header {
  font-weight: bold;
}

.product-imgs {
  display: flex;
  flex-direction: column;
  align-items: center;
  /* background-color: #c1c12c; */
}

.product-imgs image {
  width: 640rpx;
  /* min-height: 1280rpx; */
}

.product-view {
  margin-top: 20rpx;
  display: flex;
  justify-content: flex-end;
  height: 40rpx;
}

product-view-img {
  width: 40rpx;
  height: 40rpx;
}

.product-view-img image {
  width: 40rpx;
  height: 40rpx;
}

.product-view-text {
  height: 40rpx;
  line-height: 40rpx;
}

.product-seller-info {
  padding: 20rpx;
  background-color: #fff;
}

.message-board {
  background-color: #fff;
  padding: 40rpx;
}

.fixed-bar {
  /* visibility: hidden; */
  box-sizing: border-box;
  position: fixed;
  right: 0;
  bottom: 0;
  display: flex;
  padding: 10rpx;
  width: 100%;
  height: 100rpx;
  background-color: #dd773e;
}

/**
* 评论
*/
.size-me {
  width: 60rpx;
  height: 60rpx;
  margin: 10rpx 16rpx;
  z-index: 1;
}
.share {
  position: relative;
  width: 60rpx;
  height: 60rpx;
  margin: 10rpx 16rpx;
  /* visibility: hidden; */
  z-index: -100;
  background-color: #dd773e;
}
button::after {
  border: none;
}
.share-img {
  position: absolute;
  margin: 0;
  top: -3rpx;
  left: -4rpx;
}

.say-view {
  padding: 20rpx;
  background-color: #dd773e;
  line-height: 90rpx;
  border-bottom: solid 1px #fff;
  color: #fff;
}

.wechat-contact, .phone-contact{
  background-color: #fff;
  color: #dd773e;
}
.wechat-contact {
  margin-left: 60rpx;
}

.say-sth {
  margin-left: 20rpx;
  font-size: 36rpx;
  color: #fff;
}

