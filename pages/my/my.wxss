/**index.wxss**/
@import "../lib/weui.wxss";
.userinfo {
  display: flex;
  flex-direction: column;
  align-items: center;
  background-color: #dd773e;
  padding-bottom: 20rpx;
}

.userinfo-avatar {
  width: 128rpx;
  height: 128rpx;
  margin: 20rpx;
  border-radius: 50%;
}

.userinfo-nickname {
  color: #fff;
}

.usermotto {
  margin-top: 200px;
}

.my-btn {
  position: relative;
  border-bottom: 2rpx solid #dd773e;
  display: flex;
}

button {
  width: 50%;
}

button[plain] {
  border: none;
  /* border-bottom: 2rpx solid rgb(238, 157, 81); */
}

.line1 {
  position: absolute;
  bottom: 0;
  left: 0;
  height: 6rpx;
  width: 50%;
  background-color: #dd773e;
}
.line2 {
  position: absolute;
  bottom: 0;
  right: 0;
  height: 6rpx;
  width: 50%;
  background-color: #dd773e;
}
.weui-media-box__info button {
  float: right;
  margin-left: 20rpx;
  color: #fff;
  width: 25%;
  height: 60rpx;
  line-height: 60rpx;
  display: block;
  background-color: #dd773e;
}